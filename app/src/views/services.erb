<script type="text/javascript"><!--

$().ready(() => {
  const id = '#services';
  const org = 'cyber-dojo';
  $(id + ' button').click(() => {
    reload(id, org);
  });
  reload(id, org);
});

//--></script>

<div id="services">
  <button>reload</button>
  <table>
    <tr>
      <th name="name">name</th>
      <th name="state">state</th>
      <th name="age">~age</th>
      <th name="took">took</th>
      <th name="github"></th>
      <th name="travis"></th>
      <th name="dockerhub"></th>
    </tr>
    <% @services.each_with_index do |repo,index| %>
      <tr even="<%= index%2 == 0 %>" name="<%= repo %>">
        <td><%= repo %></td>
        <td><span class="state"></span></td>
        <td><span class="age"></span></td>
        <td><span class="took"></span></td>
        <td>
          <a href="https://github.com/cyber-dojo/<%= repo %>" target="_blank">github</a>
        </td>
        <td>
          <a href="https://travis-ci.org/cyber-dojo/<%= repo %>" target="_blank">Travis</a>
        </td>
        <td>
          <a href="https://hub.docker.com/r/cyberdojo/<%= repo %>/tags" target="_blank">Dockerhub</a>
        </td>
      </tr>
    <% end %>
  </table>
</div>
