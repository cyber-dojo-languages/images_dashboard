<script type="text/javascript"><!--

$(document).ready(function() {

  const id = '#services';
  const org = 'cyber-dojo';
  const space = ' ';
  $(id + space + 'button').click(reload(id,org));

});

//--></script>

<div id="services">
  <button>reload</button>
  <table>
    <tr>
      <th name="name">Name</th>
      <th name="status">Status</th>
      <th name="time">Time</th>
      <th name="date">Date</th>
      <th name="github"></th>
      <th name="travis"></th>
    </tr>
    <% @services_repos.each_with_index do |repo,index| %>
      <tr even="<%= index%2 == 0 %>" name="<%= repo %>">
        <td><%= repo %></td>
        <td><span class="status"></span></td>
        <td><span class="time"></span></td>
        <td><span class="date"></span></td>
        <td>
          <a href="https://github.com/cyber-dojo/<%= repo %>" target="_blank">github</a>
        </td>
        <td>
          <a href="https://travis-ci.org/cyber-dojo/<%= repo %>" target="_blank">Travis</a>
        </td>
      </tr>
    <% end %>
  </table>
</div>
